<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button> </a>

{{#each postagens}}
    <div class="card">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>{{descricao}}</p>
            <small>{{data}}</small><br>
            <small>{{categoria.nome}}</small><br>
            <a href="/admin/postagens/edit{{_id}}"><button class="btn btn-success mt-3">Editar postagens</button></a>
            <a href="/admin/postagens/deletar{{_id}}"><button class="btn btn-danger mt-3">Deletar postagens</button></a>
        </div>
    </div>
    {{else}}
        <h4 class="mt-4">Nenhuma postagem registrada</h4>
{{/each}}