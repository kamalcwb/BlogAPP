<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{this.nome}}</h4>
        <small>Slug: {{this.slug}}</small>
        <br>
        <small>Data de criação: {{this.date}}</small>
        <br>
        <a href="/admin/categorias/edit{{_id}}"><button class="btn btn-success mt-4"> Editar </button></a>
        <br>
        <form action="/admin/categorias/deletar" method="post">
            <input type="hidden" name="id" value="{{_id}}">
            <a href=""> <button type="submit" class="btn btn-danger mt-2">Deletar</button> </a>
        </form>


    </div>
</div>
{{else}}
<h4 class="mt-4">Nenhuma categoria registrada</h4>
{{/each}}